{
    "$schema": "http://json-schema.org/draft-04/schema",
    "definitions": {},
    "title" : "3D4M_animation_extension",
    "description" : "Animation container.",
    "type": "object",
    "properties": {
        "name" : {
            "description": "Name of the Animation",
            "type": "string"
        },
        "id" : {
            "description": "Identifier of the Animation.",
            "type": "string"
        },
        "start" : {
            "description": "Number of start frame",
            "type": "integer"
        },
        "end" : {
            "description": "Number of end frame",
            "type": "integer"
        },
        "joints" : {
            "description": "List of all joints of the Animation.",
            "items": {
                "$ref": "animation.joint.schema.json"
            },
            "type": "array"
        },
        "controllers" : {
            "description": "List of all controllers of the Animation.",
            "items": {
                "$ref": "animation.controller.schema.json"
            },
            "type": "array"
        },
        "morph_controllers" : {
            "description": "List of all morph controllers of the Animation.",
            "items": {
                "$ref": "animation.morph_controller.schema.json"
            },
            "type": "array"
        }
    },
    "required" : ["id"]
}
